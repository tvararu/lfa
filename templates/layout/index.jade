doctype html
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui")

    title= book_title
    
    link(type='text/css', rel='stylesheet', media='screen', href='css/master.css')
  body
    #selectionbar
      textarea.note-area
      .buttons
        .btn-group.btn-group-justified.regular-buttons
          .btn.btn-default.btn-lg.highlight: i.fa.fa-fw.fa-pencil
          .btn.btn-default.btn-lg.add-note: i.fa.fa-fw.fa-comment
          .btn.btn-default.btn-lg.remove-selection: i.fa.fa-fw.fa-eraser
        .btn-group.btn-group-justified.note-buttons
          .btn.btn-default.btn-lg.cancel-note: i.fa.fa-fw.fa-times
          .btn.btn-default.btn-lg.confirm-note: i.fa.fa-fw.fa-check
      .triangle.visible-lg
        i.fa.fa-fw.fa-play
    .menu
      #leftbar-toggle: i.fa.fa-bars.fa-fw
      #rightbar-toggle: i.fa.fa-question.fa-fw
    .navigation-menu
      a#previous-chapter: i.fa.fa-fw.fa-chevron-left
      a#next-chapter: i.fa.fa-fw.fa-chevron-right
    
    nav#leftbar
      //- this will be done on runtime
      //+toc(toc)
    
    section.container
      #content.row
        #textbook.col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12
          article
            section
              +error-message()
    
    aside#rightbar
      +rightbar()

    script(type='text/javascript', data-main="lfa/js/main", src="lfa/js/lib/require.min.js")
    
    //- this must be included for live reload to work in development
    //- it will be automatically ignored when deployed
    != livereload
